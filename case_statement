add(){
   a=$1
   b=$2
   sum=`expr $a + $b`
   echo "$sum"
}
sub(){
   a=$1
   b=$2
   sub=`expr $a - $b`
   echo "$sub"
}    
     read a
     read b
     echo "addition"
     echo "substract"
     echo "select"
read choice
case $choice in
       1) add $a $b ;;
       2) sub $a $b ;;
       *) echo "Invalid"
esac
       


